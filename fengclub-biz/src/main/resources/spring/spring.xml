<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
            http://www.springframework.org/schema/beans/spring-beans-4.2.xsd  
            http://www.springframework.org/schema/context  
            http://www.springframework.org/schema/context/spring-context-4.2.xsd   
            http://www.springframework.org/schema/aop     
       http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

	<!-- 导入mongodb的配置文件 -->
	<import resource="classpath:/database/mongodb-context.xml" />

	<!--自动扫描含有@Service将其注入为bean -->
	<context:component-scan base-package="com.fengclub.biz.service.impl" />
	<!--自动扫描含有@Repository将其注入为bean -->
	<context:component-scan base-package="org.fengclub.core.dao" />
	<!--自动扫描含有@Component将其注入为bean -->
	<context:component-scan base-package="com.fengclub.biz.entity" />
</beans>